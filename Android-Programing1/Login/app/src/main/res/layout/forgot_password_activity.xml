<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ForgotPasswordActivity">


    <TextView
        android:id="@+id/Tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Recuperar contraseÃ±a"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgotUsernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Usuario"
        android:textColor="@color/colorOnSecondary"
        app:layout_constraintBottom_toTopOf="@id/recoveredPasswordTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tittle" />

    <TextView
        android:id="@+id/recoveredPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/colorOnSecondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/recoverButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotUsernameEditText" />

    <Button
        android:id="@+id/backToLoginButton"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Volver al Login"
        android:textColor="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toEndOf="@+id/recoverButton"
        app:layout_constraintTop_toBottomOf="@id/recoveredPasswordTextView" />

    <Button
        android:id="@+id/recoverButton"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Recuperar"
        android:textColor="@color/colorBackground"
        app:layout_constraintEnd_toStartOf="@id/backToLoginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoveredPasswordTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>