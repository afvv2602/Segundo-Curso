<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- Sombras -->
            <solid android:color="#cdb6e2" />
            <corners android:radius="50dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#f0d5ff"
                android:endColor="#dfd5e5"
                android:gradientRadius="100%"
                android:centerX="50%"
                android:centerY="50%"
                android:type="radial" />
            <stroke
                android:width="2dp"
                android:color="#cdb6e2" />
        </shape>
    </item>
</layer-list>