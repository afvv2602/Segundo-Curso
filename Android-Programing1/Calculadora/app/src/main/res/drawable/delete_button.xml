<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombras -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#d7dade" />
            <corners android:radius="50dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <!--  Color  -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#bbceda"
                android:endColor="#e6e8ec"
                android:gradientRadius="100%"
                android:centerX="50%"
                android:centerY="50%"
                android:type="radial" />
            <stroke
                android:width="2dp"
                android:color="#d7dade" />
        </shape>
    </item>
</layer-list>
