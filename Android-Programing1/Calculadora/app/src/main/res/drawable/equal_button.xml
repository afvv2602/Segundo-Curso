<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- Sombras -->
            <solid android:color="#7e2cc4" />
            <corners android:radius="50dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#972de7"
                android:endColor="#8925d7"
                android:gradientRadius="100%"
                android:centerX="50%"
                android:centerY="50%"
                android:type="radial" />
            <stroke
                android:width="2dp"
                android:color="#7e2cc4" />
        </shape>
    </item>
</layer-list>
